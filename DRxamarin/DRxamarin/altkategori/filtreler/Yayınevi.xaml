				</StackLayout>
			</Frame>
			<SearchBar Placeholder="Yayınevi ara..."/>
			<ScrollView Orientation="Vertical">
				<StackLayout Orientation="Vertical">
					<Button Text="İletişim Yayıncılık (664)" BackgroundColor="Transparent" Margin="0,0,150,0" Clicked="kirmizi" TextColor="Black"/>
